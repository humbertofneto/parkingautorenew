<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5"
    tools:context=".AutoRenewActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Auto Parking Renewer"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1F1F1F"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView para conteúdo principal -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Placa do Veículo -->
            <TextView
                android:id="@+id/licensePlateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placa do Veículo"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/licensePlateInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Ex: ABC1234"
                android:inputType="textCapCharacters"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Tempo de Estacionamento -->
            <TextView
                android:id="@+id/parkingDurationLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempo de Estacionamento"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/parkingDurationSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:layout_marginBottom="24dp" />

            <!-- Periodicidade de Renovação -->
            <TextView
                android:id="@+id/renewalFrequencyLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Renovar a Cada"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/renewalFrequencySpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:layout_marginBottom="24dp" />

            <!-- Email Confirmation -->
            <CheckBox
                android:id="@+id/emailCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmação por email?"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Digite seu email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textSize="16sp"
                android:enabled="false"
                android:visibility="gone"
                android:layout_marginBottom="24dp" />

            <!-- Contadores -->
            <LinearLayout
                android:id="@+id/countersLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="#E8F5E9"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓ Sucessos"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32" />

                    <TextView
                        android:id="@+id/successCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="#FFEBEE"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✗ Falhas"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#C62828" />

                    <TextView
                        android:id="@+id/failureCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#C62828" />

                </LinearLayout>

            </LinearLayout>

            <!-- Status -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Aguardando configuração"
                android:textSize="14sp"
                android:textColor="#666666"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Countdown Timer -->
            <TextView
                android:id="@+id/countdownText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center"
                android:padding="8dp"
                android:background="#E3F2FD"
                android:visibility="gone"
                android:layout_marginBottom="8dp"
                android:singleLine="true"
                android:ellipsize="none" />

            <!-- Total Parking Time (shown when stopped) -->
            <TextView
                android:id="@+id/totalTimeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#F57C00"
                android:gravity="center"
                android:padding="8dp"
                android:background="#FFF3E0"
                android:visibility="gone"
                android:layout_marginBottom="8dp"
                android:singleLine="true"
                android:ellipsize="none" />

        </LinearLayout>
    </ScrollView>

    <!-- Button Layout -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/startButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Start"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rounded"
            android:padding="8dp"
            android:layout_marginEnd="6dp" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Stop"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rounded_red"
            android:padding="8dp"
            android:enabled="false"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Exit"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rounded_gray"
            android:padding="8dp"
            android:layout_marginStart="6dp" />

    </LinearLayout>

    <!-- Version Text -->
    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0.4"
        android:textSize="10sp"
        android:textColor="#CCCCCC"
        android:layout_marginBottom="8dp"
        android:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
